@model Escuela

@{
    ViewData["Title"] = "Información Escuela";
    Layout = "Simple";
}

<h1>Escuela De Pixeles69 </h1>
<h2>Nombre: <small>@Model.Nombre</small></h2>
<h3>Tipo de Escuela: @Model.TipoEscuela</h3>
<address>
    <p>Dirección: @Model.Dirección</p>
    <p>País: @Model.Pais</p>
    <p>Ciudad: @Model.Ciudad</p>
</address>
<p><strong>Año fundación: <small>@Model.AñoDeCreación </small></strong></p>

<p><i>@ViewBag.CosaDinamica</i></p>