@model Curso

@{
    ViewData["Title"] = "Actualización del Curso";
    Layout = "Simple";
}

<h1>@ViewData["Title"] </h1>
<p><i>@ViewBag.MensajeExra</i></p>
<div asp-validation-summary="All"></div>


<form method="post">
    <div>
        <label asp-for="Id"></label>
        <input asp-for="Id">
    </div>
    <div>
        
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre">
    </div>
    <div>
        <label asp-for="Dirección"></label>
        <input asp-for="Dirección">
    </div>
    <div>
        <label asp-for="Jornada"></label>
        @Html.DropDownList(
        "Jornada", Html.GetEnumSelectList<TiposJornada>(),
        "Seleccione una jornada",
        new{@class="form-control"}
        )

    </div>
  
    <input type="submit" value="Actualizar">
    
</form>


<p><i>@ViewBag.Fecha</i></p>